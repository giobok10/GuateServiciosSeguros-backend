# Copy this file to .env and fill in real secrets before running locally or in production
# Never commit your real .env to the repository

# Database connection string example (Postgres/Neon)
# Example: postgresql://user:password@host:port/dbname?sslmode=require
DATABASE_URL=

# JWT secret used to sign tokens (use a long, random string)
JWT_SECRET=

# Frontend origin for CORS (optional)
FRONTEND_URL=http://localhost:5173

# Application port
PORT=3000

# Token expiry (optional)
JWT_EXPIRES_IN=1h
